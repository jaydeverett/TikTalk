
<%= @article.title%><br>
<%= @article.url%><br>
<%= @article.domain%><br>

<%= form_for [@article, @comment] do |f| %>
<%= f.label :content, 'Comment' %> <br>
<%= f.text_area :content %> <br>
<%= f.submit %>
<% end %>

<% @article.comments.all.each do |comment|%>
<%= current_user.username %>: <br>
<%=comment.content%><br>
<%end%>
